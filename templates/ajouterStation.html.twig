{% extends 'backOfficeSta.html.twig' %}

{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="card-body pt-2 mt-1">
        <form id="formStation" method="POST" action="{{ path('ajouter_Station') }}">
            {{ form_start(form) }}
            <div class="row mt-2 gy-4">
                <div class="col-md-6">
                    <div class="form-floating form-floating-outline">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        <label for="{{ form.nom.vars.id }}">Nom</label>
                        {% if form_errors(form.nom)|length > 0 %}
                            <div class="alert alert-danger">
                                {{ form_errors(form.nom) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating form-floating-outline">
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        <label for="{{ form.adresse.vars.id }}">Adresse</label>
                        {% if form_errors(form.adresse)|length > 0 %}
                            <div class="alert alert-danger">
                                {{ form_errors(form.adresse) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating form-floating-outline">
                        {{ form_widget(form.lat, {'attr': {'class': 'form-control'}}) }}
                        <label for="{{ form.lat.vars.id }}">Latitude</label>
                        {% if form_errors(form.lat)|length > 0 %}
                            <div class="alert alert-danger">
                                {{ form_errors(form.lat)|trans({'This value is not valid.': 'La latitude ne doit pas contenir de caractères alphabétiques.'}, 'validators') }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating form-floating-outline">
                        {{ form_widget(form.longi, {'attr': {'class': 'form-control'}}) }}
                        <label for="{{ form.longi.vars.id }}">Longitude</label>
                        {% if form_errors(form.longi)|length > 0 %}
                            <div class="alert alert-danger">
                                {{ form_errors(form.longi)|trans({'This value is not valid.': 'La longitude ne doit pas contenir de caractères alphabétiques.'}, 'validators') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary me-2">Valider</button>
                <a href="{{ path('listes_Stations') }}" class="btn btn-outline-secondary">Retour</a>
            </div>
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
